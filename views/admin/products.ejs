<% include ../header.ejs %>

    <% include ./sidebar.ejs %>
    <div class="col-sm-8">

            <table class="table table-bordered table-hover">
                <tr>
                    <th>제목</th>
                    <th>작성일</th>
                    <th>삭제</th>
                </tr>
                <% products.forEach(function(products){ %>
                <tr>
                    <td>
                        <a href="/admin/products/detail/<%= products.id %>"><%= products.productname %></a>
                    </td>
                    <td>
                        <%= products.getDate.year %>년 <%= products.getDate.month %>월 <%= products.getDate.day %>일
                    </td>
                
                    <td>
                        <a href="/admin/products/delete/<%= products.id %>" class="btn btn-danger" onclick="return confirm('삭제하시겠습니까?')">삭제</a>
                    </td>
                </tr>
                <% }); %>
            </table>

                <nav>
                    <ul class="pagination">
                        <li>
                            <a href="<%= paginate.href(true) %>" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                    <% pages.forEach(function(page){ %>
                        <li class="<%= paginate.page == page.number ? 'active' : ''%>">
                            <a href="<%= page.url %>"><%= page.number %></a>
                        </li>
                    <%})%>

                    <%if(paginate.hasNextPages(pageCount)){%>
                        <li>
                            <a href="<%= paginate.href() %>">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    <%}%>
                    </ul>
                </nav>

            <a href="/admin/products/write" class="btn btn-default">작성하기</a>

    </div>

<% include ../footer.ejs %>

